@using Microsoft.AspNetCore.Identity
@using TextToMotionWeb.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <p></p>

    @section Scripts{

    }
}
else
{
    <div class="row no-margins">
        <div class="banner-image">
            <br /><br />
            <div class="row white-text">
                <h2 class="center-align no-margins"><b>Text to Motion</b></h2>
                <br />
                <p class="center-align"><b>Get started now...</b></p>
                <div class="center-align">
                    <a href="/Account/Login" class="ghost-button-rounded-corners cursorPointer"><b><i class="fa fa-user"></i> Login</b></a>
                    <a href="/Account/Register" class="ghost-button-rounded-corners cursorPointer"><b><i class="fa fa-user-plus"></i>Register</b></a>
                </div>
            </div>
        </div>
    </div>
    <div class="row no-margins">
        <div class="nav-transition grey lighten-1"></div>
    </div>
    <br />
    <div class="row">
        <div class="col s12 col m10 offset-m1">
            <div class="col l4 s12">
                <div class="center-align">
                    <img src="~/images/home/platform.png" class="responsive-img panel-head-img" />
                </div>
                <div class="card rounded white z-depth-3">
                    <div class="card-content">
                        <span class="card-title center-align">Application Description</span>
                        <hr />
                        <p>
                            This app should act as a 'databank' for visual and text-based motion data captured from images and videos
                        </p>
                        <br />
                        <p>
                            Images and Videos that are uploaded can be tagged with descriptive words, and users can use these tags to search the database for similar images uploaded by other users
                        </p>
                        <br />
                    </div>
                </div>
            </div>
            <div class="col l4 s12">
                <div class="center-align">
                    <img src="~/images/home/resources.png" class="responsive-img panel-head-img" />
                </div>
                <div class="card rounded white z-depth-3">
                    <div class="card-content">
                        <span class="card-title center-align">Resources</span>
                        <hr />
                        <ul>
                            <li><i class="fa fa-rocket"></i> TensorFlow Deep Learning Framework</li>
                            <li><i class="fa fa-gear"></i> Python HTTP Server</li>
                            <li><i class="fa fa-database"></i> ASP.Net</li>
                            <br />
                            <li><i class="fa fa-file-text"></i> Research Paper: Flowing Convolutional Neural Network for Human Pose Estimation in Videos</li>
                        </ul>
                        <br /><br />
                    </div>
                </div>
            </div>
            <div class="col l4 s12">
                <div class="center-align">
                    <img src="~/images/home/instructions.png" class="responsive-img panel-head-img" />
                </div>
                <div class="card rounded white z-depth-3">
                    <div class="card-content">
                        <span class="badge new" data-badge-caption="users">For Registered</span>
                        <span class="card-title">Instructions</span>
                        <hr />
                        <p>Users can upload images and videos to be processed by the pose estimation algorithm</p>
                        <br />
                        <p>Users can 'tag' their uploads with as many descriptive words as they want</p>
                        <br />
                        <p>Users can perform a full-text search over the names and tags of all the uploads added to the database (by all users)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
