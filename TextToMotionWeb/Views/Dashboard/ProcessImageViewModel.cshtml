        var processedImageContext = processedImageCanvas.getContext('2d');


        $.post(joint_position_url,
            JSON.stringify(imagesToSend),
            function (response) {
                console.log(response);

            },
            "json")
            .fail(function (response) {
                vm.showInvalidResultForProcessedState();
            });


